@model ItSystem.Controllers.TasksController.TaskViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Новая задача</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdExecutor" class="control-label">Исполнитель</label>
                <select asp-for="IdExecutor" class ="form-control" asp-items="ViewBag.IdExecutor"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdBoard" class="control-label">Доска</label>
                <select asp-for="IdBoard" class ="form-control" asp-items="ViewBag.IdBoard"></select>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label">Приоритет</label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
