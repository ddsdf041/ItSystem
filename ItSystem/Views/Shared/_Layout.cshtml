<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ItSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ItSystem.styles.css" asp-append-version="true" />
       <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">

    <style>
        .nav-link {
            color: white;
        }

        .nav-link:hover {
            color: cyan;
        }

        .body {
            overflow-y: hidden;
        }
    </style>

</head>
<body class="body">

        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                        <!-- Заголовок меню -->
                        <a href="/"
                           class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <a class="navbar-brand nav-link" asp-area="" asp-controller="Home" asp-action="Index">ItSystem</a>
                        </a>
                        <!-- элементы меню -->
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item">
                            <a asp-area="" asp-controller="Channels" asp-action="Index" class="nav-link align-middle px-0">
                                    <i class="fs-4 bi-chat"></i>
                                    <span class="ms-1 d-none d-sm-inline">Каналы</span>
                                </a>
                            </li>

                            <li>
                            <a asp-area="" asp-controller="Projects" asp-action="Index" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-clipboard-data"> </i> <span class="ms-1 d-none d-sm-inline">Проекты</span>
                                </a>
                            </li>

                        <li>
                            <a asp-area="" asp-controller="Boards" asp-action="Index" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-grid"></i>   <span class="ms-1 d-none d-sm-inline">Доски</span>
                            </a>
                        </li>

                            <li>
                            <a asp-area="" asp-controller="Tasks" asp-action="Index" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-card-checklist"></i> <span class="ms-1 d-none d-sm-inline">Мои задачи</span>
                                </a>
                            </li>


                        </ul>
                        <hr>

                    <partial name="_LoginPartial" />
                    </div>
                </div>
            <main role="main" class="py-3 col main">
                @RenderBody()
            </main>
            </div>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
